<main class="main">
    <div class="info">
        <h1 class="info_title">{{info.title}}</h1>
        <p class="info_text">{{info.description}}</p>
    </div>
    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input class="form_input_item" type="{{type}}" id="form_input_{{id}}" name="{{name}}"
                placeholder="{{placeholder}}">
            {{/each}}
        </div>
        <div class="checkbox">
            {{#with checkbox}}
            <input type="checkbox" name="{{name}}" id="check_{{name}}">
            <span class="check_item"></span>
            <label for="check_{{name}}">{{label}}</label>
            {{/with}}
        </div>
        <button type="submit" class="form_btn">{{button}}</button>
        <div class="form_line"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>
{{#with updates}}
<section class="updates">
    <h2 class="upd_title">{{title}}</h2>
    {{#each list}}
    <div class="upd_list_item">
        <img src="#" alt="" class="upd_img">
        <div class="upd_item_info">
            <p class="upd_nickname">@{{nickname}}</p>
            <p class="upd_text">{{description}}</p>
        </div>

    </div>
    {{/each}}
    <a href="#" class="upd_link">All updates</a>
</section>
{{/with}}

{{#with expirience}}

<section class="expirience">
    <h1 class="expirience_title">{{title}}</h1>
    <span class="expirience_badge">{{badge}}</span>
    <div class="expirience_list">
        {{#each list}}
        <div class="expirience_list_item">
            <strong class="expirience_name">{{name}}</strong>
            <p class="expirience_text">{{details}}</p>
        </div>
        {{/each}}
    </div>
</section>
{{/with}}





