<div class="page ">
    <div class="page-content">
        <header class="row g-0">
            <div class="logo col-6">
                <span class="badge text-bg-primary">D</span>
            </div>
            <div class="header_nav col-6">
                {{>links data=header url=url text=text isColumn=false}}
            </div>
        </header>

        <section class="page_block">
            <div class="hero">
                {{#with hero}}
                {{>hero title=title text=text}}
                <a href={{button.url}} class="button">{{button.text}}</a>
                {{/with}}
            </div>
        </section>


        <section class="page_block ">
            <div class="row g-4">
                {{#each preview}}
                {{>card_preview data=this}}
                {{/each}}
            </div>
        </section>

        <main class="page_block">
            <div class="main">
                <div class="row g-0">
                    <div class="list_header">
                        <div class="row g-0">
                            <div class="col-6">
                                <h2 class="list_title">List of posts</h2>
                            </div>
                            <div class="col-6 ">
                                <div class="category_btn_list">
                                    {{#each categories}}
                                    <button class="category_button">
                                        {{text}}
                                    </button>
                                    {{/each}}
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="list">
                            {{#each news}}
                            {{>cardPost data=this}}
                            {{/each}}
                        </div>
                    </div>
                    <aside class="col-5 ">
                        <div class="list_aside">
                            <div class="about">
                                <h4 class="about_title">About</h4>
                                <p class="about_text">
                                    {{about}}
                                </p>
                            </div>
                            {{>linkList title="Archives" data=archive }}
                            {{>linkList title="Social" data=social }}
                        </div>
                    </aside>
                </div>
            </div>
        </main>

        <footer class="row g-0 page_block">
            <div class="col-3">
                <div class="logo">
                    <span class="badge text-bg-primary">D</span>
                </div>
                <p>Copyring 2023-2024</p>
            </div>
            {{#each footer}}
            <div class="footer_list col-3">
                <p>{{title}}</p>
                {{> links data=links url=url text=text isColumn=true}}
            </div>
            {{/each}}
        </footer>
    </div>
</div>