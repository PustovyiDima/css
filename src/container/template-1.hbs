<div class="page ">
    <div class="page-content">
        <header class="row g-0">
            <div class="logo col-6">
                <span class="badge text-bg-primary">D</span>
            </div>
            <div class="header_nav col-6">
                {{>links data=header url=url text=text isColumn=false}}
            </div>
        </header>
        {{#with hero}}
        <div class="title mtop">
            <h1>{{title}}</h1>
            <p>{{text}}</p>
        </div>
        {{/with}}

        <div class="card_list row gx-4 mtop">
            {{#each plans}}
            <div class="col-4">
                <div class="card">
                    <div class="card-header">{{name}}</div>
                    <div class="card-body">
                        <p> <b>${{price}}</b> / mo</p>
                        {{#each features}}
                        <p>{{this}}</p>
                        {{/each}}
                        <button class="btn {{#if @first}} btn-outline-primary {{else}}btn-primary{{/if}}">
                            {{button}}
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <footer class="row g-0 mtop">
            <div class="col-3">
                <div class="logo">
                    <span class="badge text-bg-primary">D</span>
                </div>
                <p>Copyring 2023-2024</p>
            </div>
            {{#each footer}}
            <div class="footer_list col-3">
                <p>{{title}}</p>
                {{> links data=links url=url text=text isColumn=true}}
            </div>
            {{/each}}
        </footer>
    </div>
</div>